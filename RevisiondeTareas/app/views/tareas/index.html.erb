<p id="notice"><%= notice %></p>

<h1>Lista de Tareas</h1>

<table>
  <thead>
    <tr>
      <th>Enunciado</th>
      <th>Tematica</th>
      <th>Archivo subido</th>
      <th>Fecha</th>
      <th>Hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tareas.each do |tarea| %>
      <tr>
        <td><%= tarea.enunciado %></td>
        <td><%= tarea.tematica %></td>
        <td><%= tarea.archivo %></td>
        <td><%= tarea.fecha %></td>
        <td><%= tarea.hour %></td>

        



        <td><%= link_to 'Show', tarea %></td>
        <td><%= link_to 'Edit', edit_tarea_path(tarea) %></td>
        <td><%= link_to 'Destroy', tarea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

